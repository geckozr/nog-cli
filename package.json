{
  "name": "nog-cli",
  "version": "0.9.0",
  "description": "nog-cli - NestJS OpenAPI Generator CLI: Generate NestJS services, interfaces and modules from OpenAPI specifications",
  "main": "dist/src/main.js",
  "bin": {
    "nog-cli": "dist/src/main.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.json && npx typedoc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run test/e2e",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "deps:check": "npx depcheck . --ignores='ts-node,vitest,vite,prettier,eslint,eslint-*,@typescript-eslint,@vitest,@trivago/prettier-plugin-sort-imports,@stylistic,@types,@vitest/coverage-v8'",
    "pack:dry": "npm pack --dry-run",
    "prepublishOnly": "npm run lint && npm run build && npm test"
  },
  "keywords": [
    "nestjs",
    "openapi",
    "swagger",
    "code-generator",
    "api",
    "rest",
    "typescript"
  ],
  "homepage": "https://github.com/geckozr/nog-cli#readme",
  "bugs": {
    "url": "https://github.com/geckozr/nog-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geckozr/nog-cli.git"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/geckozr"
  },
  "license": "Apache-2.0",
  "author": "geckozr",
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^15.1.2",
    "@loopback/openapi-v3-types": "^1.2.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "ts-morph": "^27.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "openapi-types": "^12.1.3",
    "prettier": "^3.7.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.14"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "test/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
